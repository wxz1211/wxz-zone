<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.wxz.dao.ArticleMapper">
    <resultMap id="ArticleMap" type="com.github.wxz.entity.Article">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="sid" property="sid" jdbcType="INTEGER"/>
        <result column="category" property="category" jdbcType="INTEGER"/>
        <result column="tag" property="tag" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="img" property="img" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="sent" property="sent" jdbcType="VARCHAR"/>
        <result column="top" property="top" jdbcType="INTEGER"/>
        <result column="chosen" property="chosen" jdbcType="INTEGER"/>
        <result column="create" property="create" jdbcType="TIMESTAMP"/>
        <result column="update" property="update" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="addArticle" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.github.wxz.entity.Article">
        INSERT
        INTO
        wxz_zone_article
        (
        uid,
        <if test="category != null">
            category,
        </if>
        <if test="tag != null">
            tag,
        </if>

        <if test="title != null">
            title,
        </if>
        <if test="img != null">
            img,
        </if>
        <if test="content != null">
            content,
        </if>
        <if test="sent != null">
            sent,
        </if>

        <if test="top != null">
            top,
        </if>
        <if test="chosen != null">
            chosen,
        </if>

        `create`,
        `update`
        )
        values(
        #{uid},
        <if test="category != null">
            #{category},
        </if>
        <if test="tag != null">
            #{tag},
        </if>
        <if test="title != null">
            #{title},
        </if>
        <if test="img != null">
            #{img},
        </if>
        <if test="content != null">
            #{content},
        </if>
        <if test="sent != null">
            #{sent},
        </if>
        <if test="top != null">
            #{top},
        </if>
        <if test="chosen != null">
            #{chosen},
        </if>
        now(),
        now())
    </insert>

    <select id="getArticleByArticleId" parameterType="java.lang.Integer"
            resultMap="ArticleMap">
        SELECT
        *
        from
        wxz_zone_article
        where
        id = #{articleId}
    </select>


    <select id="getArticlesByPage"
            resultMap="ArticleMap">
        SELECT
        *
        from
        wxz_zone_article
        where `delete` =0
        ORDER BY top DESC,`create` DESC
        limit #{begin},#{pageSize}

    </select>


    <select id="count" resultType="java.lang.Integer">
        select
        count(1)
        from
        wxz_zone_article
        where `delete` =0
    </select>

    <update id="updateSidByArticleId">
        UPDATE
        wxz_zone_article
        SET
        sid = #{sid}
        WHERE
        id = #{articleId}
    </update>

    <select id="getChosenArticles" resultMap="ArticleMap">
         SELECT
        *
        from
        wxz_zone_article
        WHERE
        chosen = 1
         AND `delete` =0
        ORDER BY top DESC,`create` DESC
        limit 5
    </select>


    <select id="getTopArticles" resultMap="ArticleMap">
        SELECT
        *
        from
        wxz_zone_article
        WHERE
        top = 1
        AND `delete` =0
        ORDER BY top DESC,`create` DESC
        limit 5
    </select>

</mapper>